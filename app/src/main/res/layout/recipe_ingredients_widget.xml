<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#212121"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_widget_previous"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"

            android:layout_marginStart="6dp"
            android:background="@drawable/ic_navigate_before_black_24dp"
            android:backgroundTint="@color/cardview_dark_background" />


        <TextView
            android:id="@+id/widget_recipe_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Nutella Pie"
            />

        <Button
            android:id="@+id/btn_widget_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"

            android:layout_marginStart="6dp"
            android:background="@drawable/ic_navigate_next_black_24dp"
            android:backgroundTint="@color/cardview_dark_background"

            />
    </LinearLayout>

    <ListView
        android:id="@+id/widget_recipe_ingredient_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:listitem="@layout/single_widget_ingredient"
        android:dividerHeight="0.5dp"
        android:divider="#333"
        />




</LinearLayout>